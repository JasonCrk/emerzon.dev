        name="mdi:comment-text-outline"
    />

    <div class="card-project--youtube-clone__content">
        <div class="card-project--youtube-clone__content__stack">
            <Image
                class="card-project--youtube-clone__content__stack__tech"
                src={typeScriptIcon}
                alt="TypeScript"
                loading="eager"
                quality="low"
