            >YouTube Clone</span
        >
        <Image
            class="card-project--youtube-clone__content__icon"
            src={youTubeCloneIcon}
            alt="YouTube Clone Icon"
            quality="low"
            loading="eager"
        />
    </div>

    <div class="card-project--youtube-clone__circular-decoration"></div>
</a>

<script is:inline lang="ts">
    const $youTubeCloneCard = document.querySelector(
        '.card-project--youtube-clone',
    )
    let youTubeCloneBounds

    function rotateToMouseForYouTubeClone(e) {
        const mouseX = e.clientX
        const mouseY = e.clientY
        const leftX = mouseX - youTubeCloneBounds.x
        const topY = mouseY - youTubeCloneBounds.y
        const center = {
            x: leftX - youTubeCloneBounds.width / 2,
            y: topY - youTubeCloneBounds.height / 2,
        }
        const distance = Math.sqrt(center.x ** 2 + center.y ** 2)

        $youTubeCloneCard.style.transform = `
        scale3d(1.07, 1.07, 1.07)
        rotate3d(
          ${center.y / 100},
          ${-center.x / 100},
          0,
          ${Math.log(distance) * 2.4}deg
        )
      `

        $youTubeCloneCard.querySelector(
            '.card-project--youtube-clone__grow',
        ).style.backgroundImage = `
        radial-gradient(
          circle at
          ${center.x * 2 + youTubeCloneBounds.width / 2}px
          ${center.y * 2 + youTubeCloneBounds.height / 2}px,
          rgba(255, 255, 255, 0.1),
          #0000000f
        )
      `
    }

    $youTubeCloneCard.addEventListener('mouseenter', () => {
        youTubeCloneBounds = $youTubeCloneCard.getBoundingClientRect()
        document.addEventListener('mousemove', rotateToMouseForYouTubeClone)
    })

    $youTubeCloneCard.addEventListener('mouseleave', () => {
        document.removeEventListener('mousemove', rotateToMouseForYouTubeClone)
        $youTubeCloneCard.style.transform = ''
        $youTubeCloneCard.style.background = ''
        $youTubeCloneCard.querySelector(
            '.card-project--youtube-clone__grow',
        ).style.backgroundImage = ''
    })
</script>
